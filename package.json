{
    "name": "ra-cognito-authprovider",
    "version": "2.0.18",
    "description": "A React Admin Cognito AuthProvider that supports code flow",
    "author": "Tim Holmes",
    "license": "MIT",
    "files": [
        "*.md",
        "lib",
        "esm",
        "src"
    ],
    "main": "lib/index",
    "module": "esm/index.js",
    "types": "esm/index.d.ts",
    "sideEffects": false,
    "dependencies": {
        "@aws-sdk/client-cognito-identity": "^3.278.0",
        "@mui/icons-material": "^7.0.2",
        "@mui/material": "^7.0.2",
        "@tanstack/react-query": "^5.76.1",
        "@tanstack/react-query-devtools": "^5.76.1",
        "amazon-cognito-identity-js": "^6.3.15",
        "qrcode.react": "^3.1.0",
        "react": "^18.2.0",
        "react-admin": "^5.7.2",
        "react-dom": "^18.2.0"
    },
    "scripts": {
        "build": "yarn run build-cjs && yarn run build-esm",
        "build-cjs": "rimraf ./lib && tsc",
        "build-esm": "rimraf ./esm && tsc --outDir esm --module es2015",
        "watch": "tsc --outDir esm --module es2015 --watch",
        "lint": "eslint --fix ./src",
        "publish:patch": "yarn version --patch && yarn build && yarn publish",
        "publish:gitlab": "yarn publish --non-interactive",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^6.4.2",
        "@testing-library/react": "^14.2.1",
        "@testing-library/react-hooks": "^8.0.1",
        "@types/react": "*",
        "@vitejs/plugin-react": "^4.2.1",
        "@vitest/coverage-istanbul": "^1.3.1",
        "eslint": "^9.27.0",
        "jsdom": "^24.0.0",
        "npm": "^11.4.1",
        "rimraf": "^5.0.5",
        "typescript": "^5.8.3",
        "vite": "^5.1.4",
        "vitest": "^1.3.1"
    }
}
